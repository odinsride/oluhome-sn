        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	var grPaymentPlan = new GlideRecord('x_656683_oluhome_payment_plan');
	var subtotal = 0;
	var newSubtotal = 0;
	
	if (current.payment_plan != '') {
		grPaymentPlan.get(current.payment_plan);
		subtotal = parseInt(grPaymentPlan.getValue('payment_amount'));
		newSubtotal = subtotal + parseInt(current.getValue('purchase_price'));
		grPaymentPlan.setValue('payment_amount', newSubtotal);
		grPaymentPlan.update();
	}
	else {
		grPaymentPlan.get(previous.payment_plan);
		subtotal = parseInt(grPaymentPlan.getValue('payment_amount'));
		newSubtotal = subtotal - parseInt(current.getValue('purchase_price'));
		grPaymentPlan.setValue('payment_amount', newSubtotal);
		grPaymentPlan.update();
	}

})(current, previous);]]></script>
