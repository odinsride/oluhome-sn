        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Whenever the grand total changes, calculate the delta and add it to the balance
	var balance = current.getValue('balance');
	var grandTotalCurrent = current.getValue('grand_total');
	var grandTotalPrev = previous.getValue('grand_total');
	
	var grandTotalDelta = parseInt(grandTotalCurrent) - parseInt(grandTotalPrev);
	var newBalance = parseInt(balance) + grandTotalDelta;
	current.setValue('balance', newBalance);

})(current, previous);]]></script>
